{
    "manifest_version": 3,
    "name": "Reading List",
    "version": "1.0.0",
    "description": "Save web pages for later reading with automatic metadata capture",
    "permissions": ["storage", "activeTab", "sidePanel", "tabs"],
    "host_permissions": ["<all_urls>"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "background": {
        "service_worker": "background.bundle.js",
        "type": "module"
    },
    "action": {
        "default_title": "Open Reading List",
        "default_icon": "icons/hi_icon.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.bundle.js"],
            "run_at": "document_idle"
        }
    ]
}
